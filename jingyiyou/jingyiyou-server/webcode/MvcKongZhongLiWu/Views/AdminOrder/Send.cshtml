@model ncc2019.Orders
@using ncc2019.Common.BLL
@{
    ViewBag.Title = "发货操作";
}
<style type="text/css">
    .box_1 label {
        display: inline-block;
        width: 100px;
    }

    section {
        margin: 20px;
    }
</style>
@if (Model.DeliveryCompany != null) { 
<script type="text/javascript">
    $(function () {
        $('#com').val('@Model.DeliveryCompany');
    });
</script>
}
<div class="blank5"></div>
<div class="Area">
    <div class="box">
        @using (Html.BeginForm())
        {                   
            <div class="box_1">
                <section>
                    <label> 订单号：</label><h4 style="display:inline-block;" >@Model.OrderID</h4>
                </section>
                <section>
                    <label> 发送渠道：</label>@Html.DropDownList("com", RouteHelper.GetComList(), new { id="com"})
                </section>
                <section>
                    <label> 快递号：</label><input type="text" name="deliverNo" width="200px" value="@Model.DeliveryNo" />
                </section>
                <section>
                    <input type="submit" class="bnt_blue_1" value="保  存" />&nbsp;&nbsp;&nbsp;<input type="button" onclick="window.location='/adminorder'" class="bnt_blue_1" value="返  回" />
                </section>
            </div>
            <input type="hidden" value="@ViewBag.orderid" name="orderid" />
        }
    </div>
</div>