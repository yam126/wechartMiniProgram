@model ncc2019.Orders
@using ncc2019.Common.Tool
@{
    ViewBag.Title = "订单详细";
}
<script src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
       
        $("form").validate({
            rules: {
                num: {
                    required: true,
                    min: 1,
                    max: 10,
                    digits: true
                }
            },
            messages: {
                num: {
                    required: "请输入购买数量",
                    min: "购买数量不能小于1",
                    max: "购买数量不能大于10",
                    digits: "请输入正确的数量"
                }
            },
            errorPlacement: function (error, element) {
                error.appendTo("error");

            }
        });
    });
    function rbhiddenpass() {

        $('.pthepass').addClass('hiddencss');
    }
    function rbshowpass() {
        $('.pthepass').removeClass("hiddencss");
    }
</script>
<style type="text/css">
    .thepass p, .way p {
        display: inline;
        padding-left: 10px;
    }

    .rbcheck p label, .rbcheck p input[type=radio] {
        cursor: pointer;
    }

    .hiddencss {
        display: none !important;
    }

    .nav {
        margin-bottom: 10px;
    }

        .nav > li {
            position: relative;
            display: block;
        }

    .nav-pills > li {
        float: left;
    }

        .nav-pills > li + li {
            margin-left: 2px;
        }

    a {
        color: #337ab7;
        text-decoration: none;
    }

    .nav > li > a {
        position: relative;
        display: block;
        padding: 10px 15px;
    }

    .nav-pills > li > a {
        border-radius: 4px;
    }

    .nav-pills > li.active > a, .nav-pills > li.active > a:focus, .nav-pills > li.active > a:hover {
        color: #fff;
        background-color: #337ab7;
        /*background-color: #5bc0de;*/
    }
</style>
<div style="height:10px;"></div>

<div class="block table">
    <div class="flowBox">      
        <h6><span>@Model.Goods.Name，由 @Model.FromName 送出！</span></h6>
        <table border="0" cellspacing="1" cellpadding="5" width="99%" bgcolor="#dddddd" align="center">

            <tbody>
                <tr>
                    <td bgcolor="#ffffff" style="width:200px;">礼物信息：</td>
                    <td bgcolor="#ffffff" ><a href="/Home/Details?id=@Model.GoodID" target="_blank" ><img src='@Model.Goods.ImgUrl' width="200px" height="200px" /></a></a></td>
                </tr>               
                <tr>
                    <td bgcolor="#ffffff">@Model.FromName 对您说：</td>
                    <td bgcolor="#ffffff" >
                        <div style="width:100%;height:70px;">@Model.SayEtc</div>
                    </td>

                </tr>
               
            </tbody>
        </table>
        <input type="hidden" value="@ViewBag.orderid" name="orderid" />
    </div>
  

</div>

<div style="height:50px;"></div>







