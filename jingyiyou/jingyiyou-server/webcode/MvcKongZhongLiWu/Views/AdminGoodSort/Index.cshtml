@model IEnumerable<ncc2019.GoodSort>
@using ncc2019.Common.Enum
@{
    ViewBag.Title = "Index";
}
<div class="block clearfix">

    @Html.Partial("~/views/part/AdminLeft.cshtml", ncc2019.Common.Enum.AdminPageType.GoodSortList);
    <style type="text/css">
        .kz_list td {
            background-color: white;
        }
    </style>

    <div class="AreaR">
        <div class="box">
            <div class="box_1">
                <div style="_height: 1%;" class="userCenterBox boxCenterList clearfix">
                    <p>

                        <a href="/admingoodsort/create">
                            <div class="blank"></div>
                            <input class="bnt_blue_1" name="gen_code" value="添加" type="button">
                        </a>
                    </p>
                    <table class="kz_list" border="0" cellspacing="1" cellpadding="5" width="100%" bgcolor="#dddddd">
                        <tr>

                            <th>
                                显示名称
                            </th>

                            <th>
                                是否启用
                            </th>
                            <th>
                                排序
                            </th>
                            <th>
                                显示在web首页
                            </th>
                            <th>
                                添加日期
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>

                                    @EnumTool.GetEnumName(typeof(ShiFouStatus), item.Enabled)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GoodSortOrder)
                                </td>
                                <td>
                                    @EnumTool.GetEnumName(typeof(ShiFouStatus), item.ShowInIndex ?? 0)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddDate)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.GoodSortID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.GoodSortID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.GoodSortID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>