@model MvcKongZhongLiWu.Info
           @{
               ViewBag.title = "会说话的书签";
           }
<script type="text/javascript">
    $(function () {
        $('.ect-bg').hide();
        showguanzhu();
    });
    function btn_ok() {
        window.location = '/qrcode/scantest?type=bookmark';
    }
</script>
<style type="text/css">
    .guanzhu {
        position: inherit;
    }

    .hidcss {
        display: none;
    }

    .goods-info .tab-info * {
        width: auto;
    }

    .topmenu {
        width: 49% !important;
    }

    .nav-pills li {
        text-align: center;
        background-color: rgba(245,245,245,1);
    }
</style>
@*<a href="/quan/takenok"><img src="/images/quan10.jpg" style="width:100%;margin-top:0px;" /></a>*@
<div class="goods-info ect-padding-tb">

    <section class="">
        @*<div class="tab-content quan">
            <div>*@

        @*<div><h4>恭喜您获得一个优惠码： <strong>@ViewBag.quancode </strong></h4>*@
