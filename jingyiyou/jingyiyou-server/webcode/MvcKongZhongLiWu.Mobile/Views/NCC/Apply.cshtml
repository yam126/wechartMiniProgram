<script type="text/javascript">
    var app = new function () {
        this.initPage = function () {
            com.initPage();
            $('.goback').click(function () {
                window.history.back(-1);
            })
            $('.btnok').click(function () {
                var name = $('.name').val();
                var phone = $('.phone').val();
                var address = $('.address').val();
                var desc = $('.desc').val();
                if (name == '') {
                    com.showAlertMessage("联系人不能为空！");
                    return;
                }
                if (phone == '') {
                    com.showAlertMessage("联系电话不能为空！");
                    return;
                }
                if (address == '') {
                    com.showAlertMessage("地址不能为空！");
                    return;
                }
                var user = com.data.user;
                $.ajax({
                    url: '/apis/saveczapply',
                    data: {
                        token: com.data.token,
                        name: name,
                        phone: phone,
                        address: address,
                        desc: desc
                    },
                    success: function (res) {
                        if (res.result == 'ok') {
                            com.showAlertMessage("提交成功！");
                            window.history.back(-1);
                        } else {
                            com.showAlertMessage("提交失败！");
                        }
                    }
                })
            });
        }
    }
    $(function () {
        app.initPage();
    })
</script>
