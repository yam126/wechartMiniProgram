@{
    ViewBag.Title = "新彩Club-帮助";
    Layout = "~/Views/Shared/_Layout-cnn.cshtml";
}
<style type="text/css">
    #app, .help-bd {
        background: #362b49;
    }
    .help-bd {
        min-height: 6.05rem;
        color: #fff;
        font-size: .14rem;
    }
        .help-bd .item {
            border-bottom: 1px solid #493455;
        }
        .help-bd .q {
            padding: .08rem .15rem;
            position: relative;
            line-height: .3rem;
            background: #1b0e30;
        }
            .help-bd .q:after {
                content: "";
                position: absolute;
                right: .12rem;
                top: 50%;
                width: .08rem;
                height: .08rem;
                margin-top: -.05rem;
                border-top: 2px solid #ccc;
                border-right: 2px solid #ccc;
                -webkit-transition: .3s ease-in;
                transition: .3s ease-in;
                -webkit-transform: rotate(135deg);
                transform: rotate(135deg);
            }
        .help-bd .a {
            display: none;
            padding: .1rem .12rem;
        }
     .headers {
        position: relative;
        height: .5rem;
        line-height: .5rem;
        background: #362b49;
    }

        .headers .header-l {
            position: absolute;
            left: 0;
            top: 0;
            padding-top: .1rem;
        }

            .headers .header-l .item {
                float: left;
                margin-left: .1rem;
            }

            .headers .header-l .goback {
                width: .3rem;
                height: .3rem;
                background: url(data:image/png;base64,) no-repeat;
                background-size: .3rem .9rem;
            }

        .headers .tit {
            font-size: .16rem;
            line-height: .5rem;
            color: #fff;
            text-align: center;
        }
    .block, .show {
        display: block;
    }
    .help-bd .show .a {
        display: block;
    }
</style>
<script type="text/javascript">
    var app = new function () {
        this.initPage = function () {
            $('.help-list li').each(function () {
                
                $(this).click(function () {
                   // alert($(this).hasClass('show'))
                    if (!$(this).hasClass('show')) {
                        $(this).addClass('show');
                    } else {
                        $(this).removeClass('show');
                    }
                    
                });
            })

            $('.goback').click(function () {
                window.history.back(-1);
            })
        }
    }
    $(function () {
        app.initPage();
    });
</script>
