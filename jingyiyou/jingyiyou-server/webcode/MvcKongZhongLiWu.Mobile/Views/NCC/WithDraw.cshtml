<script type="text/javascript">
    var app = new function () {
        this.data = {
            totalTime: 60,
            user: null
        }
        this.checkLogind = function () {

            var user = com.getUser();
            if (user != null) {
                app.data.user = user;
                $('.realname').val(user.realname);
                $('.phone').val(user.phone);
            }
        }
        this.initPage = function () {
            com.initPage();
            app.checkLogind();
            app.bindEvents();
        }
        this.bindEvents = function () {
            $('.getsmscode').click(function () {
                app.data.totalTime = 60;
                setInterval(verifyCodeTimer, 1000);
                $.ajax({
                    url: "/apis/SendVerifCodeWithToken",
                    data: {
                        token: app.data.user.token
                    },
                    success: function (res) {
                        if (res.result == "ok") {
                            app.showAlertMessage("发送成功！");
                        } else {
                            com.showAlertMessage('发送失败！');
                        }

                    }
                });
            })
            //验证码倒计时
            function verifyCodeTimer() {
                app.data.totalTime = app.data.totalTime - 1;
                $('.getsmscode').html(app.data.totalTime);
                if (app.data.totalTime <= 0) {
                    clearInterval(verifyCodeTimer);
                    app.data.totalTime = 0;
                    $('.getsmscode').html("获取验证码");
                }
            }

            $('.goback').click(function () {
                window.history.back(-1);
            })

            $('.btnok').click(function () {
                $.ajax({
                    url: "/apis/PayToUserBank",
                    data: {
                        token: app.data.user.token,
                        bankno: $('.bankno').val(),
                        amount: $('.amount').val(),
                        bankcode: $('.bankcode').val(),
                        verifycode: $('.verifycode').val()
                    },
                    success: function (res) {
                        if (res.result == "ok") {
                            com.showAlertMessage("提现成功！");
                        } else {
                            com.showAlertMessage('提现失败！' + res.message);
                        }

                    }
                });
            })
        }
    }
    $(function () {
        app.initPage();
        //$('body').css('font-size','36px;')
    });
</script>
