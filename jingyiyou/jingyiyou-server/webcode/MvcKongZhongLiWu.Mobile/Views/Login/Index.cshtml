<script type="text/javascript">
    function userLogin() {
        if ($('#uid').val() == "") {
            alert("用户名不能为空！");
            return false;
        }
        if ($('#pwd').val() == "") {
            alert("密码不能为空！");
            return false;
        }
        return true;
    }
</script>

