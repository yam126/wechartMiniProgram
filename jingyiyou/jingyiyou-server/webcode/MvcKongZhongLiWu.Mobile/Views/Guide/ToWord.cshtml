        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        display: none;
        z-index: 20000;
    }

    .paly_bg {
        position: fixed;
        height: 12em;
        width: 100%;
        background: rgba(255, 255, 255, 0.7);
        z-index: 30000;
        bottom: 0;
        left: 0;
        text-align: center;
        vertical-align: middle;
        margin: auto;
    }

    .btn_play {
        display: inline-block;
        width: 4em;
        height: 4em;
        background: url('../../images/play.png') no-repeat center center;
        background-size: 100% auto;
        z-index: 100;
        vertical-align: middle;
    }

