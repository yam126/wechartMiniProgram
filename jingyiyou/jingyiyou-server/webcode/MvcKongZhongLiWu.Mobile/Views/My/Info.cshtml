                                <td>
                                    @*<input name="sex" type="text" id="sex" size="20" class="inputBg" />*@
                                    &nbsp;&nbsp;<input id="Radio1" name="sex" type="radio" value="1" /><label for="Radio1">&nbsp;男&nbsp;</label>&nbsp;&nbsp;
                                    <input id="Radio2" name="sex" type="radio" value="0" /><label for="Radio2">&nbsp;女&nbsp;</label>
                                </td>
                            </tr>
