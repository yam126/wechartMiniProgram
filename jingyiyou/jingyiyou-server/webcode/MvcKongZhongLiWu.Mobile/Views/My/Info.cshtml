                                <td>
                                    <input name="phone" type="tel" id="phone" size="20" class="inputBg" value="@Model.Phone" />
                                </td>
                            </tr>
                            @*<tr>
                                    <td align="right">出生日期：</td>
                                    <td>
                                        <input name="brith" type="text" id="brith" size="20" class="inputBg" />

                                    </td>
