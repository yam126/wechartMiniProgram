}
<style type="text/css">
    .boxCenterList td {
        margin-top: 10px;
        line-height: 30px;
    }

    .boxCenterList input {
        margin-top: 5px;
        margin-bottom: 5px;
        /*margin-right:10px;*/
    }

    .inputBg {
        width: 90%;
        margin-right: 10px;
    }
</style>
<div class="block clearfix">


    <div class="AreaR">
        <div class="box">
            <div class="box_1">
                @using (Html.BeginForm("DoChangeInfo", "My", FormMethod.Post, new { id = "changeinfo" }))
