                            <tr style="height:30px;">

                                <td colspan="2"></td>
                            </tr>
                           
                        </table>
                    </div>
                            <div class="btnpanel">
                                <button type="submit" class="btn btn-info ect-colorf button_only" onclick="return checkpass()">保存</button>
                            </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function guanzhu() {
        $('#gzweixin').show();
       
    }
    $(function () {
        @if (Model.Sex == 1)
        { @Html.Raw("$('#Radio1').attr('checked','1')"); }
        else
        { @Html.Raw("$('#Radio2').attr('checked','1')"); }
    });
</script>
